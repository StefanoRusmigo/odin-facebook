<% @users.each do |user| %>
	<% next if user == current_user %>
  <%= user.name   %> 
  <%= user.email  %> 
  <% if  current_user.friends.include?(user)   %> 
  <%= link_to "view profile",user %> 
  <% elsif current_user.pending_requests.include?(user)  %>
  pending invitation
  <%= link_to("delete", friend_requests_destroy_path(friend_id:user.id),
  method: :delete) %>  
  <% else %> 
  <%= link_to("Invite", friend_requests_create_path(friend_id:user.id),method: :post ) %>    
 <% end %>
 <hr>
   </br>
 <% end %>